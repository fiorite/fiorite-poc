{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "strict": true,
    "lib": ["es2015", "esnext"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./packages",
    "resolveJsonModule": true,
    "paths": {
      "@fiorite/core": ["core/src"],
      "@fiorite/core/operators": ["core/src/operators"],
      "@fiorite/db": ["db/src"],
      "@fiorite/http": ["http/src"],
      "@fiorite/sqlite": ["sqlite/src"],
      "@fiorite/web": ["web/src"]
    }
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
