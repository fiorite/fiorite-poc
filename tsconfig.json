{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2019",
    "strict": true,
    "lib": ["es2015", "esnext"],
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "resolveJsonModule": true
  },
  "files": [
    "src/index.ts",
    "src/iteration/index.ts",
    "src/operators/index.ts",
    "src/collections/index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*_test.ts",
    "**/*.spec.ts",
    "**/*_spec.ts"
  ]
}
