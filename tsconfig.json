{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2019",
    "strict": true,
    "lib": ["es2015", "esnext"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./packages",
    "resolveJsonModule": true,
    "paths": {
      "@fiorite/cli": ["cli/lib"],
      "@fiorite/core": ["core"],
      "@fiorite/core/*": ["core/*"],
      "@fiorite/db": ["db/lib"],
      "@fiorite/db/*": ["db/lib/*"],
      "@fiorite/http": ["http/lib"],
      "@fiorite/http/*": ["http/lib/*"]
    }
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*_test.ts",
    "**/*.spec.ts",
    "**/*_spec.ts"
  ]
}
